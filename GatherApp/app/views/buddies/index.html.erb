<p id="notice"><%= notice %></p>

<h1>Buddies</h1>

<table>
  <thead>
    <tr>
      <th>Buddy first name</th>
      <th>Buddy last name</th>
      <th>Buddy email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buddies.each do |buddy| %>
      <tr>
        <td><%= buddy.buddy_first_name %></td>
        <td><%= buddy.buddy_last_name %></td>
        <td><%= buddy.buddy_email %></td>
        <td><%= link_to 'Show', buddy %></td>
        <td><%= link_to 'Edit', edit_buddy_path(buddy) %></td>
        <td><%= link_to 'Destroy', buddy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

